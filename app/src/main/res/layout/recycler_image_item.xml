<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/empty_image_background"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/image_quality_score"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Quality Score -"
            />

        <TextView
            android:id="@+id/number_of_faces"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of faces -"
            />

        <TextView
            android:id="@+id/similarity_score"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Similarity- "
            />
        <ImageView
            android:id="@+id/image_view"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
    </LinearLayout>
</layout>


